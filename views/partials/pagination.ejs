<form action='/site' method="get">
    <div class="center">
        <div class="center">
            <label for="chapter">Chapter: </label><input type="text" name="chapter" value="<%= chapter%>">
        </div>
        <div class="center">
            <a href="/site?chapter=<%= chapter - 1%>">previous</a>
            <a href="/site?chapter=<%= +chapter + 1%>">next</a>
        </div>
    </div>
</form>